= form_for @pre_order do |f|
  %h1 
    Pre-order your 
    != klik_logotype(true)
    today!
  -if @pre_order.errors.any?
    #error_explanation
      %h3= "Ooops. We can't save your Pre-Order because: "
      %br
      %ul
        - @pre_order.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :email, :value => (@pre_order.email || "Your Email"), :class => "xlarge", :style => "width: 95%;"
  %br
  %br
  = select(:pre_order, :quantity, Quantity.amounts, {:prompt => "Please select a Quantity"}, {:class => "xlarge", :style => "width: 98%"})
  %br
  %br
  %br
  = f.submit(:value => "Place my Pre-Order", :class => "btn primary large")